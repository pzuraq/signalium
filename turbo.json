{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "out/**", "dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^test", "^build"]
    },
    "test:unit": {
      "dependsOn": ["^test:unit", "^build"]
    },
    "test:transform": {
      "dependsOn": ["^test:transform", "^build"]
    },
    "test:react": {
      "dependsOn": ["^test:react", "^build"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
