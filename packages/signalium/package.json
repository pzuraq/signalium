{
  "name": "signalium",
  "version": "2.0.0",
  "type": "module",
  "repository": "https://github.com/pzuraq/signalium",
  "description": "Chain-reactivity at critical mass",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": {
        "development": "./src/index.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "default": "./dist/cjs/index.js"
      }
    },
    "./debug": {
      "import": {
        "development": "./src/debug.ts",
        "default": "./dist/esm/debug.js"
      },
      "require": {
        "default": "./dist/cjs/debug.js"
      }
    },
    "./react": {
      "import": {
        "development": "./src/react/index.ts",
        "default": "./dist/esm/react/index.js"
      },
      "require": {
        "default": "./dist/cjs/react/index.js"
      }
    },
    "./transform": {
      "import": {
        "development": "./src/transform/index.ts",
        "default": "./dist/esm/transform/index.js"
      },
      "require": {
        "default": "./dist/cjs/transform/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "peerDependencies": {
    "react": ">=18.3.1"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "scripts": {
    "dev": "vitest dev",
    "dev:unit": "vitest dev --project unit",
    "dev:transform": "vitest dev --project transform",
    "dev:react": "vitest dev --project react",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:transform": "vitest run --project transform",
    "test:react": "vitest run --project react",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "cp build/react.js react.js && cp build/transform.js transform.js",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs --moduleResolution node"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/browser": "^3.0.6",
    "playwright": "^1.50.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^7.1.2",
    "vite-plugin-babel": "^1.3.0",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  }
}
